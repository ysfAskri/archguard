{
  "name": "archguardian-vscode",
  "displayName": "Architecture Guardian",
  "description": "Inline diagnostics for security issues, AI code smells, and convention violations",
  "version": "0.1.0",
  "publisher": "ysfAskri",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Linters"],
  "activationEvents": ["onLanguage:typescript", "onLanguage:javascript", "onLanguage:typescriptreact", "onLanguage:javascriptreact", "onLanguage:python", "onLanguage:go", "onLanguage:rust", "onLanguage:java"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "archguardian.scan", "title": "Archguardian: Scan Current File" },
      { "command": "archguardian.fixFinding", "title": "Archguardian: Fix Finding with AI" },
      { "command": "archguardian.suppressFinding", "title": "Archguardian: Suppress Finding" }
    ],
    "configuration": {
      "title": "Architecture Guardian",
      "properties": {
        "archguardian.enable": { "type": "boolean", "default": true, "description": "Enable archguardian diagnostics" },
        "archguardian.scanOnSave": { "type": "boolean", "default": true, "description": "Run scan on file save" }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "package": "vsce package --no-dependencies",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "esbuild": "^0.24.0",
    "@vscode/vsce": "^3.2.0"
  }
}
